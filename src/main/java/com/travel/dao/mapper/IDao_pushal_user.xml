	<select id="pushalpayment" resultType="com.travel.dto.user.DTO_pushal_user">
			
			
			<![CDATA[  
			SELECT 		A.ROW_NUM
							,A.AL_CONTENT
							,A.ORDER_NO
							,A.AL_TIME
			FROM(
					SELECT   ROW_NUMBER() OVER(ORDER BY P.AL_TIME DESC) AS ROW_NUM,
								P.AL_CONTENT ||   ' ( 객실 ' || COUNT(C.R_NO) || '건 )' AS AL_CONTENT,
						       	P.ORDER_NO,
						       	P.AL_TIME
					FROM 	THISPUSHAL P   	LEFT JOIN  	THISORDER 		B 	ON 		P.ORDER_NO = B.ORDER_NO
		                                            	LEFT JOIN 	THISORDERDTL C 	ON 		B.ORDER_NO = C.ORDER_NO
		                                                                                  		AND 		B.S_NO 		 = C.S_NO
					WHERE 	P.M_NO = #{param1}
					AND 		
					(
						#{param2} = 0
						OR 
						(P.AL_GUBUN = #{param2})
					)
		            GROUP BY P.ORDER_NO, P.AL_TIME, P.AL_CONTENT
					ORDER BY P.AL_TIME DESC
			) A
			WHERE ROW_NUM BETWEEN #{param3} AND #{param4}
			]]>
			
	</select>
	
